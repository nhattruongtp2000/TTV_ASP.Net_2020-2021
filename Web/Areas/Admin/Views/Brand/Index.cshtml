@model IEnumerable<ViewModel.ViewModels.BrandVm>
@using X.PagedList.Mvc.Core
@using X.PagedList

<h1>Danh sách thương hiệu</h1>

@if (ViewBag.Success != null)
{
    <div class="alert-primary">@ViewBag.Success</div>

}
@if (ViewBag.Edit != null)
{
    <div class="alert-primary">@ViewBag.Edit</div>
}
@if (ViewBag.Delete != null)
{
    <div class="alert-primary">@ViewBag.Delete</div>
}

<p>
    <a id="createbutton"  asp-action="Create">Tạo mới</a>
</p>

<div style="margin-top:30px;margin-bottom:30px">
    <label>Tìm kiếm thương hiệu theo tên</label>
    <input id="namebrand" type="search" class="form-control " style="width:300px" />
    <a id="searchbrand" class="btn btn-primary">Tìm kiêm</a>
</div>


<table id="showbrand" class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBrand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>


                <td>
                    <a id="editplace" href="/Admin/Brand/Edit/?IdBrand=@item.IdBrand">Edit</a>|
                    <a id="deleteplace" href="/Admin/Brand/Delete/?IdBrand=@item.IdBrand">Delete</a>|

                </td>
            </tr>
        }


    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
    new X.PagedList.Mvc.Common.PagedListRenderOptionsBase
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }

    })

