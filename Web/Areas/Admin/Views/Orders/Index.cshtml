        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@(stt++)</th>
                    <td >
                        @Html.DisplayFor(modelItem => item.IdOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailShip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameShip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressShip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberShip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoticeShip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Status)
                    </td>
                    <td><a href="@Url.ActionLink("Details","Orders",new { IdOrder = item.IdOrder })">Details</a> </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
        new X.PagedList.Mvc.Common.PagedListRenderOptionsBase
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }

        })




</body>


