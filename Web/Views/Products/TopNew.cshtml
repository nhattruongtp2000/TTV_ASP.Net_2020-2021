</html>

@section Scripts{
    <script>
    var slider1 = document.getElementById('pricemin');
    var slider2 = document.getElementById('pricemax');

    var output1 = document.getElementById("demo1")
    var output2 = document.getElementById("demo2")

    output1.innerHTML = slider1.value;
    output2.innerHTML = slider2.value;

    slider1.oninput = function () {
        output1.innerHTML = this.value;
    }

    slider2.oninput = function () {
        output2.innerHTML = this.value;
    }

    var id = [];
    var i = 0;

    $(".loai").click(function () {
        if ($(this).hasClass("loai")) {
            $(this).removeClass("loai");
            $(this).addClass("checkk");
            id[i] = $(this).attr("data-id");
            i++;
        }
        else {
            var value = $(this).attr("data-id");
            var index = id.indexOf(value);
            i--;
            id.splice(index,1);
            $(this).removeClass("check");
            $(this).addClass("loai");


        }

    });
    </script>
    <script>
    $("#test").click(function () {
            var IdCategory = @Model.ElementAt(1).IdCategory;
            var IdBrand1 = id[0];
            var IdBrand2 = id[1];
            var IdBrand3 = id[2];
            var IdBrand4 = id[3];
            var IdBrand5 = id[4];
            var IdBrand6 = id[5];
            var pricemin = $("#demo1").text();
            var pricemax = $("#demo2").text();
            $.ajax({
                type: "POST",
                url:'/Products/GetProductPerMutilpleBrandWithCategory',
                data: {
                    IdCategory: IdCategory,
                    IdBrand1: IdBrand1,
                    IdBrand2: IdBrand2,
                    IdBrand3: IdBrand3,
                    IdBrand4: IdBrand4,
                    IdBrand5: IdBrand5,
                    IdBrand6: IdBrand6,
                    pricemin: pricemin,
                    pricemax: pricemax,
                    page:1
                },
                success: function (x) {
                    $(".single-product-area").html(x);
                }
            });

        });
    </script>
}