@model ViewModel.ViewModels.OrderDetailsUser

@{
    ViewData["Title"] = "OrderHistoryDetails";
}

<h1>OrderHistoryDetails</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Mã đơn hàng
            </th>
            <th>
               Tên sản phẩm
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giá
            </th>
            <th>
               Ảnh
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetailsVms) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                @Convert.ToInt32(item.Price).ToString("#,##0")
            </td>
            <td>
               <img src="~/@item.PhotoReview" class="img-rounded" height="40" width="40" />
            </td>
        </tr>
}
    </tbody>
</table>
