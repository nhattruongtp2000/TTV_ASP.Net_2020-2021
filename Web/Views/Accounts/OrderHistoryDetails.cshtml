@model IEnumerable<ViewModel.ViewModels.OrderDetailsVm>

@{
    ViewData["Title"] = "OrderHistoryDetails";
}

<h1>OrderHistoryDetails</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoReview)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                @Convert.ToInt32(item.Price*item.Quality)
            </td>
            <td>
               <img src="~/@item.PhotoReview" class="img-rounded" height="40" width="40" />
            </td>
        </tr>
}
    </tbody>
</table>
